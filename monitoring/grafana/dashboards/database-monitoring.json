{
  "id": null,
  "uid": "database-monitoring",
  "title": "Database Monitoring (OpenTelemetry)",
  "tags": ["database", "postgresql", "opentelemetry"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Database Connection Pool - Idle Connections",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "otelcol_db_client_connections_usage{state=\"idle\"}",
          "legendFormat": "Idle connections",
          "interval": ""
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Database Connection Pool - Used Connections",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "otelcol_db_client_connections_usage{state=\"used\"}",
          "legendFormat": "Used connections",
          "interval": ""
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Connection Pool Size",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(otelcol_db_client_connections_usage)",
          "legendFormat": "Total",
          "interval": ""
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "type": "stat",
      "title": "Connection Pool Utilization",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "otelcol_db_client_connections_usage{state=\"used\"} / sum(otelcol_db_client_connections_usage) * 100",
          "legendFormat": "Utilization %",
          "interval": ""
        }
      ],
      "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Database Operations by SQL Statement",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(otelcol_http_server_duration_milliseconds_count{http_target=~\".*notes.*\"}[5m])",
          "legendFormat": "{{http_method}} {{http_target}}",
          "interval": ""
        }
      ],
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    }
  ]
}
